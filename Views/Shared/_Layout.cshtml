<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Studio44 Portfolio</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header class="main-header">
        <div class="header-content">
            <div class="logo">
                <a href="/">
                    <img src="~/images/logo.webp" alt="Studio44 Logo" class="logo-img" />
                </a>
            </div>
            <nav class="nav-menu">
                <a href="#" class="nav-link" onclick="showSection('home')">Home</a>
                <a href="#" class="nav-link" onclick="showSection('portfolio')">Portfolio</a>
                <a href="#" class="nav-link" onclick="showSection('about')">About</a>
                <a href="#" class="nav-link" onclick="showSection('workflow')">Workflow</a>
            </nav>
            <div class="header-contact">
                <a href="mailto:studio44v@gmail.com">studio44v@gmail.com</a>
            </div>
        </div>
    </header>
    <main id="main-content">
        @RenderBody()
    </main>
    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-contact">
                <h2>Get in Touch with Us</h2>
                <div class="footer-phone">+91 97370 44144</div>
                <div class="footer-email"><a href="mailto:studio44v@gmail.com">studio44v@gmail.com</a></div>
            </div>
            <nav class="footer-nav">
                <a href="#" class="footer-link" onclick="showSection('home')">HOME</a>
                <a href="#" class="footer-link" onclick="showSection('portfolio')">PORTFOLIO</a>
                <a href="#" class="footer-link" onclick="showSection('about')">ABOUT</a>
                <a href="#" class="footer-link" onclick="showSection('workflow')">WORKFLOW</a>
            </nav>
        </div>
        <div class="footer-copyright">
            Copyright © 2025 - Studio 44
        </div>
        <button class="scroll-top" onclick="window.scrollTo({top:0,behavior:'smooth'})">↑</button>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        window.addEventListener('scroll', function () {
            var header = document.querySelector('.main-header');
            var headerContent = document.querySelector('.main-header .header-content');
            if (window.scrollY > 60) {
                header.classList.add('transparent');
            } else {
                header.classList.remove('transparent');
            }
        });

        function showSection(sectionName) {
            document.querySelectorAll('.spa-section').forEach(section => {
                section.style.display = 'none';
            });

            const targetSection = document.getElementById(sectionName + '-section');
            if (targetSection) {
                targetSection.style.display = 'block';
            }
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

